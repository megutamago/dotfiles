{
  // ================================
  // General Settings
  // ================================
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.insertSpaces": true,
  "editor.stickyTabStops": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.autoIndent": "none",
  "extensions.ignoreRecommendations": true,
  "window.zoomLevel": -0.7,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Monokai",
  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.languageDetection": false,
  "workbench.iconTheme": "material-icon-theme",

  // ================================
  // Extension Settings
  // ================================
  "files.associations": {
    "*.conf": "nft"
  },
  "prettier.tabWidth": 2,
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-linux": "/root/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
    "vscode-kubernetes.kubectl-path-linux": "/root/.local/state/vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path-linux": "/root/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
  },
  "shellformat.effectLanguages": [
    "shellscript",
    "dockerfile",
    "dotenv",
    "hosts",
    "jvmoptions",
    "ignore",
    "gitignore",
    "properties",
    "spring-boot-properties",
    "azcli",
    "bats"
  ],
  "shellformat.path": "/usr/bin/shfmt",
  "shellcheck.enable": true,
  "shellcheck.enableQuickFix": true,
  "shellcheck.customArgs": ["-x"],
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "files.trimTrailingWhitespace": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // ================================
  // Python Settings
  // ================================
  "autopep8.args": ["--indent-size=2"],

  // ================================
  // Launguage Settings
  // ================================
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "[go]": {
    "editor.tabSize": 2
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[NGINX]": {
    "editor.formatOnType": false
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[hosts]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ssh_config]": {},
  "[ansible-jinja]": {},
  "[ansible]": {},
  "[nft]": {},
  "[jsonc]": {}
}
